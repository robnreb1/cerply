{
  "name": "cerply-cursor-starter-v2-refresh",
  "version": "1.0.0",
  "description": "Cerply v4.1 - Curator + Adaptive + Trust Labels + Analytics",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -s first \"npm -w api run dev\" \"npm -w web run dev\"",
    "dev:api": "npm -w api run dev",
    "dev:web": "npm -w web run dev",
    "build": "npm -w api run build && npm -w web run build",
    "build:api": "npm -w api run build",
    "test": "npm -w api run test",
    "smoke": "npm run smoke:api && npm run smoke:web",
    "smoke:check": "npm run smoke",
    "typecheck": "npm -w api run typecheck && npm -w web run typecheck",
    "smoke:api": "bash api/scripts/smoke-local.sh",
    "smoke:web": "bash web/scripts/smoke.sh",
    "smoke:stg": "bash scripts/smoke-stg.sh",
    "smoke:prod": "bash scripts/smoke-prod.sh",
    "traceability:check": "tsx scripts/traceability_check.ts",
    "traceability:report": "tsx scripts/traceability_check.ts --report docs/status/traceability-dashboard.md",
    "lint:conversational-copy": "tsx scripts/lint-conversational-copy.ts"
  },
  "devDependencies": {
    "@types/node": "^20.19.19",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "api",
    "web"
  ],
  "engines": {
    "node": ">=20"
  }
}

# web/.env.example
# Example environment variables for Next.js web app

# API base URL (backend) - used by Next.js rewrites to proxy /api/* requests
# Development: http://localhost:8080
# Staging: https://api-stg.cerply.com
# Production: https://api.cerply.com
NEXT_PUBLIC_API_BASE=https://api-stg.cerply.com

# Enterprise mode - shows trust badges prominently and enables enterprise features
# Values: 'true' or 'false'
NEXT_PUBLIC_ENTERPRISE_MODE=false

# Preview flags for certified UI (optional)
NEXT_PUBLIC_PREVIEW_CERTIFIED_UI=false
